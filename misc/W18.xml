  <Field name="TemperatureProbeLocationCode" min="2" max="2" validation="T456" comment="Code indicating physical location of product at the time temperature was measured"/>
  <Field name="Temperature" type="double" min="1" max="4" comment="Temperature"/>
  <Field name="UnitOrBasisForMeasurementCode" required="y" min="2" max="2" validation="T355" comment="Code specifying the units in which a value is being expressed, or manner in which a measurement has been taken"/>
</Segment>
