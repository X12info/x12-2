  <Field name="ProductServiceId" required="y" min="1" max="48" comment="Identifying number for a product or service"/>
  <Field name="Number" type="long" required="y" min="1" max="9" comment="A generic number"/>
  <Field name="EvaluationRatingCode" required="y" min="1" max="1" validation="T484" comment="Code identifying the evaluation rating applied to the credit rating score"/>
  <Field name="FreeFormMessage" required="y" min="1" max="60" comment="Free-form text"/>
</Segment>
